{
  "name": "boilerplate-react",
  "description": "Boilerplate project for a react app with server side rendering and code splitting",
  "version": "0.2.0",
  "main": "server/index.js",
  "author": "Theone Lucas <theone.luc@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "yarn run clean && cross-env NODE_ENV=development babel-watch server/index.js",
    "start:prod": "yarn run build && yarn run serve",
    "serve": "cross-env NODE_ENV=production node buildServer/index.js",
    "build": "yarn run build:client && yarn run build:server && yarn run build:node",
    "build:client": "rimraf buildClient && cross-env NODE_ENV=production webpack --progress -p --config webpack/client.prod.js",
    "build:server": "rimraf buildServer && cross-env NODE_ENV=production webpack --progress -p --config webpack/server.prod.js",
    "build:node": "cross-env NODE_ENV=production babel server/index.js -o buildServer/index.js",
    "clean": "rimraf buildClient buildServer",
    "format": "prettier --single-quote --write '{src,server,webpack}/**/*.js' && yarn run lint"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@material-ui/core": "^3.7.0",
    "@material-ui/icons": "^3.0.1",
    "apollo-cache-inmemory": "^1.6.0",
    "apollo-client": "^2.6.0",
    "apollo-link-http": "^1.5.14",
    "axios": "^0.18.0",
    "cookie-parser": "^1.4.3",
    "cross-env": "^5.0.1",
    "express": "^4.17.0",
    "express-no-favicons": "^0.0.1",
    "extract-css-chunks-webpack-plugin": "^4.5.1",
    "fetch-everywhere": "^1.0.5",
    "file-loader": "^3.0.1",
    "graphql": "^14.3.1",
    "graphql-tag": "^2.10.1",
    "history": "^4.7.2",
    "jss": "^9.8.7",
    "node-fetch": "^2.6.0",
    "react": "^16.5.2",
    "react-apollo": "^2.5.6",
    "react-dom": "^16.5.2",
    "react-jss": "^8.6.1",
    "react-redux": "^7.0.3",
    "react-universal-component": "^4.0.0",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.2",
    "redux-first-router": "^2.1.1",
    "redux-first-router-link": "^2.0.2",
    "redux-saga": "^1.0.2",
    "regenerator-runtime": "^0.13.2",
    "webpack-flush-chunks": "^2.0.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "autodll-webpack-plugin": "^0.4.2",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-universal-import": "^4.0.0",
    "babel-watch": "^7.0.0",
    "commitizen": "^3.1.1",
    "css-loader": "^2.1.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^5.11.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-flowtype": "^3.9.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.13.0",
    "prettier": "^1.17.1",
    "prop-types": "^15.6.2",
    "react-hot-loader": "4.8.7",
    "rimraf": "^2.6.2",
    "stats-webpack-plugin": "^0.7.0",
    "uglifycss": "^0.0.29",
    "webpack": "^4.32.1",
    "webpack-cli": "^3.3.2",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-hot-server-middleware": "^0.6.0",
    "write-file-webpack-plugin": "^4.4.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
